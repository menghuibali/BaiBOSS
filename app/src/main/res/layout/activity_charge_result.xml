<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/fragment_title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:background="@drawable/tariff_result_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65dp"
            android:drawableLeft="@drawable/icon_pwd_success"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:text="@string/charge_result_page_charge_success"
            android:textColor="#FF1EB63A"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:text="当前余额：1200.00元"
            android:textColor="#FF141416"
            android:textSize="12sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="35dp"
            android:background="#FFEDEDED"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chargerecord"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="68dp"
                android:background="@drawable/charge_result_charge_record_bg"
                android:gravity="center"
                android:text="@string/charge_result_page_charge_record"
                android:textColor="#FF1DA3FC"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/chargenext"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/charge_result_charge_next_bg"
                android:gravity="center"
                android:text="@string/charge_result_page_charge_next"
                android:textColor="#FFE66C3C"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>