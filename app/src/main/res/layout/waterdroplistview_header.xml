<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:waterdrop="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom|center_horizontal"
    android:orientation="horizontal">

    <com.medusa.theone.waterdroplistview.view.WaterDropView
        android:id="@+id/waterdroplist_waterdrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        waterdrop:max_circle_radius="12dp"
        waterdrop:min_circle_radius="2dp"
        waterdrop:waterdrop_color="#8E8E8E" />

    <ProgressBar
        android:id="@+id/waterdroplist_header_progressbar"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:visibility="gone" />
</LinearLayout>