<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="56dp"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/invoicerecord"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="21dp"
            android:text="@string/bill_page_tab_invoice_record"
            android:textColor="@color/bill_page_tab_text_selector"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/chargerecord"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="45dp"
            android:text="@string/bill_page_tab_charge_record"
            android:textColor="@color/bill_page_tab_text_selector"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:id="@+id/indicator"
        android:layout_width="64dp"
        android:layout_height="2dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="3dp"
        android:background="#FF8DC9F9"/>
</LinearLayout>