<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/fragment_title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:background="@drawable/tariff_result_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:drawableLeft="@drawable/icon_pwd_success"
            android:text="@string/tariff_result_success"
            android:drawablePadding="20dp"
            android:textColor="#FF1EB63A"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="@string/tariff_result_prompt"
            android:textColor="#FF8E8E8E"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>